<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AssemblyName>Meow</AssemblyName>
    <RootNamespace>Meow</RootNamespace>
    <Version>1.0.0.1</Version>
    <Authors>程序喵</Authors>
    <Description>Meow应用框架核心类库。
用于日常开发基础扩展及辅助，以提升开发效率。
以 何镇汐（https://github.com/dotnetcore/Util）应用框架为蓝本。
暂供个人学习和使用。</Description>
    <Copyright>程序喵</Copyright>
    <PackageProjectUrl>https://github.com/program-meow/meow</PackageProjectUrl>
    <RepositoryUrl>https://github.com/program-meow/meow</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>meow;dotnetcore</PackageTags>
    <PackageReleaseNotes>为个人学习，若喜欢可随意使用。</PackageReleaseNotes>
    <PackageId>Meow.Core</PackageId>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>..\..\..\output\src\release\Meow.xml</DocumentationFile>
    <OutputPath>..\..\..\output\src\release\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>..\..\..\output\src\release\Meow.xml</DocumentationFile>
    <OutputPath>..\..\..\output\src\release\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Extension\Extensions.String.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AspectCore.Extensions.AspectScope" Version="2.1.0" />
    <PackageReference Include="AspectCore.Extensions.Autofac" Version="2.1.0" />
    <PackageReference Include="Autofac" Version="5.2.0" />
    <PackageReference Include="Autofac.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="2.2.7" />
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.PlatformAbstractions" Version="1.1.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.7.0" />
    <PackageReference Include="System.Linq.Dynamic.Core" Version="1.2.2" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="4.7.1" />
  </ItemGroup>

</Project>
